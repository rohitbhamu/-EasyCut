<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:id="@+id/rlcircleimage"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="match_parent"
            android:id="@+id/editedbarberImage"
            android:layout_height="match_parent"
            android:src="@drawable/ic_photo_camera"
            android:background="@drawable/circle_accent"


            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_add_circle_outline"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/lleditText"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:layout_below="@+id/rlcircleimage"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/editedBarberName"
            android:layout_gravity="center"
            android:hint="Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/editedBarberOpeningTime"
            android:layout_gravity="center"
            android:hint="Opening Time ex. 8am : 4pm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/editedBarberaddress"
            android:layout_gravity="center"
            android:hint="Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>


</RelativeLayout>
